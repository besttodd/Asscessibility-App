<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:spinnerItemStyle">@style/SpinnerColorTheme</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerColorTheme</item>
    </style>

    <style name="ColorTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ColorThemeBlue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ColorThemeInput">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ColorThemeTitle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="SpinnerColorTheme">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/BGcolor</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomKeyboardColorTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:padding">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/blue</item>
        <item name="android:weekNumberColor">@color/red</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>